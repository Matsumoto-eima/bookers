<html>
<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>
<div class = box>
  <h5>Title</h5>
  <%= f.text_field :title %>
</div>
<div class = box>
  <h5>Body</h5>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %><br>
  </div>

<span class = "link"><%= link_to "Show", book_path(@book.id) %></span>
|
<span class = "link"><%= link_to "Back", books_path %></span>
<% end %>
</html>