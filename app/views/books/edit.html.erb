<html>
<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <main><div class = "errors"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul></main>
<% end %>
<%= form_with model: @book do |f| %>
<div class = box>
  <h5>Title</h5>
  <%= f.text_field :title %>
</div>
<div class = box>
  <h5>Body</h5>
  <%= f.text_area :body %>

  <br><%= f.submit 'Update Book' %><br>
  </div>

<span class = "link"><%= link_to "Show", book_path(@book.id) %></span>
|
<span class = "link"><%= link_to "Back", books_path %></span>
<% end %>
</html>