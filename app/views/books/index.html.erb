<html>
<%= stylesheet_link_tag "index", :media => "all" %>
<h2>Books</h2>
<table> <thead> <tr> <th>Title</th>
<th>Body</th> <th colspan = "3"></th> </tr>
</thead>
<tbody> <% @books.each do |book| %>
<tr> <div class=text><td> <%= book.title %> </td>
<td> <%= book.body %> </td></div>
<td class = "link"> <%= link_to "Show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %> </td> </tr>
<% end %> </tbody> </table>
<h3>New book</h3>

<% if @book.errors.any? %>
  <main><div class = "errors"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul></main>
<% end %>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<div class = "box">
<h5 class=text-title>Title</h5>
<%= f.text_field :title %><br>
</div>
<div class = "box">
  <h5 class=text-body>Body</h5>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>
</div>
<% end %>
</html>